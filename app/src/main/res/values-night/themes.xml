<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Application theme for dark theme. -->
    <style name="Theme.Mentra" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wild_strawberry</item>
        <item name="colorPrimaryDark">@color/lipstick</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_violet</item>
        <item name="colorSecondaryVariant">@color/medium_purple</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/wild_strawberry</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/pickled_bluewood</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <!-- Surface color. -->
        <item name="colorSurface">@color/pickled_bluewood</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Error color. -->
        <item name="colorError">@color/torch_red</item>
        <item name="colorOnError">@color/white</item>
        <item name="errorIconTint">@color/dark_tan</item>

        <!-- Warning color -->
        <item name="colorWarning">@color/lighting_yellow</item>
        <item name="colorOnWarning">@color/bronze</item>

        <!-- Disabled color -->
        <item name="colorDisabled">@color/gray</item>
        <item name="colorOnDisabled">@color/white</item>

        <!-- Line chart colors -->
        <item name="lineChartValueBackgroundColor">@color/wild_strawberry</item>
        <item name="lineChartValueColor">@color/white</item>

        <!-- Pie chart colors -->
        <item name="pieChartLineColor">@color/white</item>
        <item name="pieChartTextColor">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/pickled_bluewood</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="snackbarButtonStyle">@style/SnackbarButton</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/pickled_bluewood</item>
        <item name="android:navigationBarColor">@color/pickled_bluewood</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="colorSurface">@color/pickled_bluewood</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">#4A546E</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="SnackbarButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
</resources>