<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mentra" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wild_strawberry</item>
        <item name="colorPrimaryDark">@color/lipstick</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/kashmir_blue</item>
        <item name="colorSecondaryVariant">@color/cello</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/medium_purple</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Surface color. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/tundora</item>

        <!-- Error color. -->
        <item name="colorError">@color/torch_red</item>
        <item name="colorOnError">@color/white</item>
        <item name="errorIconTint">@color/dark_tan</item>

        <!-- Warning color -->
        <item name="colorWarning">@color/lighting_yellow</item>
        <item name="colorOnWarning">@color/bronze</item>

        <!-- Disabled color -->
        <item name="colorDisabled">@color/gray</item>
        <item name="colorOnDisabled">@color/white</item>

        <!-- Line chart colors -->
        <item name="lineChartValueBackgroundColor">@color/wild_strawberry</item>
        <item name="lineChartValueColor">@color/white</item>

        <!-- Pie chart colors -->
        <item name="pieChartLineColor">@color/tundora</item>
        <item name="pieChartTextColor">@color/tundora</item>

        <!-- Customize your theme here. -->
        <item name="colorControlHighlight">@color/wild_strawberry_trans</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/tundora</item>
        <item name="android:textColorPrimary">@color/tundora</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="snackbarButtonStyle">@style/SnackbarButton</item>
    </style>

    <style name="Theme.Mentra.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <!-- Theme to force activities to have the dark theme status bar (white icons). -->
    <style name="Theme.Mentra.LightStatusBarIcons" parent="Theme.Mentra">
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Mentra.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Mentra.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/mercury</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="BottomSheetOption">
        <item name="android:padding">12dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableTint">?attr/colorOnSurface</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SnackbarButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
</resources>